<h1>Cat Burgers!</h1>


<div class="create-group">
    <figure class="cat-box">
        <img src="/assets/images/catwithburger.png" alt="cartoon cat with burger" id="cat-image">
    </figure>
    <div class="text-divs">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for='bu'>Burger name:</label>
                <input type='text' id='bu' name='name'>
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>

<figure class="speech" id="speechbubbleright1"><img src="/assets/images/speech/pinkMeow.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>
<figure class="speech" id="speechbubbleright2"><img src="/assets/images/speech/pinkMeow2.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>
<figure class="speech" id="speechbubbleright3"><img src="/assets/images/speech/orangeMeow3.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>
<figure class="speech" id="speechbubbleright4"><img src="/assets/images/speech/orangeMeow4.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>
<figure class="speech" id="speechbubbleleft1"><img src="/assets/images/speech/orangeMeow.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>
<figure class="speech" id="speechbubbleleft2"><img src="/assets/images/speech/orangeMeow2.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>
<figure class="speech" id="speechbubbleleft3"><img src="/assets/images/speech/pinkMeow3.png" alt="Watercolor vector created by freepik" title="Watercolor vector created by freepik"></figure>


<figure id="rightcat"><img src="/assets/images/rightcatslong.png" alt="cats lining the right side of the screen"></figure>
<figure id="leftcat"><img src="/assets/images/leftcatslong.png" alt="cats lining the left side of the screen"></figure>
<figure id="burgercat"><img src="/assets/images/cateats.png" alt="cartoon cat eating a burger"></figure>

<div class="burger-box"> 
    <div class="uneaten-column">
        <h2>Orders Ready:</h2>

        <ol id="table">
            {{#each burgers}}
                {{#unless eaten}}
                    {{> burger-block eaten=true}}
                {{/unless}}
            {{/each}}
        </ol>
    </div>

    <div class="eaten-column">
        <h2>Memories of Burgers Past:</h2>

        <ol id="stomach">
            {{#each burgers}}
                {{#if eaten}}
                    {{> burger-block eaten=false}}
                {{/if}}
            {{/each}}
        </ol>
    </div>
</div>