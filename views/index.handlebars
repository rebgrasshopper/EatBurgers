<h1>Burgers!</h1>

<h2>Uneaten Burgers:</h2>

<ul>
    {{#each burgers}}
        {{#unless eaten}}
            {{> burgers/burger-block eaten=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers:</h2>

<ul>
    {{#each burgers}}
        {{#if eaten}}
            {{> burgers/burger-block eaten=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for='bu'>Burger name:</label>
        <input type='text' id='bu' name='name'>
    </div>

    <button type="submit">Add Burger</button>
</form>